<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Multiple Image Upload with Preview</title>
    <link rel="stylesheet" href="/styles/upload.css" />
  </head>
  <body>
    <div class="container">
      <h1>Upload Images</h1>
      <form id="uploadForm" enctype="multipart/form-data">
        <input
          type="file"
          id="imageFiles"
          name="images"
          accept="image/*"
          multiple
          required
          style="display: none"
        />
        <label for="imageFiles">Select Images</label>
        <button type="button" onclick="uploadImages()">Upload</button>
      </form>

      <h3>Selected Images:</h3>
      <div id="gallery"></div>
      <a href="/gallery">Return to Gallery</a>
    </div>

    <script src="/js/upload.js"></script>
  </body>
</html>
